@model TerminateRequest.Add


@using (Ajax.BeginForm("_AddTerminateRequest", "Operations",
        new { src = ViewBag.src },
         new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnSuccess", OnBegin = "ShowLoadingDialog()" },
            new { @id = "_AddTerminateRequestForm" })
    )
{


<div class="row p-2">
    <div class="col-lg-3 form-group">
        <label> Employee <sup>*</sup> </label>
        @Html.DropDownListFor(n => n.EMPID, new SelectList(Model.EmployeeList, "ID", "Name", Model.EMPID), "Select",
         new { @class = "form-control mb-0  applyselect" })
        @Html.ValidationMessageFor(model => model.EMPID, "", new { @class = "text-danger" })
    </div>

    <div class="col-lg-3 form-group">
        <label> Category <sup>*</sup> </label>
        <select data-val="true" data-val-required="Category Can't be Blank" id="@Html.IdFor(x => x.Category)" name="@Html.NameFor(x => x.Category)" class="applyselect form-control">
            <option value="">Select</option>
            <option @(Model.Category == "Resignation " ? "selected" : "") value="Resignation">Resignation</option>
            <option @(Model.Category == "Termination " ? "selected" : "") value="Termination">Termination</option>
            <option @(Model.Category == "Abscond" ? "selected" : "") value="Abscond">Abscond</option>
        </select>
        @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
    </div>
    <div class="col-lg-3 form-group">
        <label> Notice Period Completed <sup>*</sup> </label>
        <select data-val="true" data-val-required="Category Can't be Blank" id="@Html.IdFor(x => x.IsNPCompleted)" name="@Html.NameFor(x => x.IsNPCompleted)" class="applyselect form-control">
            <option value="">Select</option>
            <option value="No">No</option>
            <option value="Yes">Yes</option>
        </select>
        @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
    </div>
    <div class="col-lg-3 form-group">
        <label>Last working Day</label>
        @Html.TextBoxFor(model => model.LastWorkingDay, new { @class = "form-control", @type = "Date" })
        @Html.ValidationMessageFor(model => model.LastWorkingDay, "", new { @class = "text-danger" })
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 form-group">
        <label>Reason</label>
        @Html.TextAreaFor(model => model.Reason, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Reason, "", new { @class = "text-danger" })
    </div>
   
    <div class="col-lg-12 form-group text-right">
        <button type="submit" class="btn client-save btn-primary" name="Command" value="Add"> Submit</button>
    </div>

</div>
}