@model Tab.Approval
@section style{
    @System.Web.Optimization.Styles.Render("~/bundle/dataTablecss")
}
<div class="table-section">
    @Html.Partial("ListHeader_Partial", "RFC Requests Approval")

    <div class="row">
        <div class="col-lg-12 ">
            <div class="card">
                <div class="card-body">
                    <div class="">


                        @using (Ajax.BeginForm("_RFCApprovalsList", "Approvals",
                                new { src = ClsCommon.Encrypt(ViewBag.MenuID + "*" + "/Approvals/_RFCApprovalsList") },
                                 new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnSuccess", OnBegin = "ShowLoadingDialog()" },
                                    new { @id = "_RFCApprovalsListForm" })
                            )
                        {
                            <div class="row">

                                <div class="col-sm-2 form-group">
                                    <label>Month <sup>*</sup></label>
                                    @Html.TextBoxFor(model => model.Month, new { @class = "form-control", @type = "Month" })
                                    @Html.ValidationMessageFor(model => model.Month, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-12 form-group">
                                    <label>EMP List</label>
                                   
                                        @Html.DropDownListFor(model => model.EMPID, new SelectList(ViewBag.EMPList, "ID", "Name"), "Select All",
                                                 new { @class = "form-control applyselect" })

                                   
                                    @Html.ValidationMessageFor(model => model.EMPID, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-sm-2 form-group SSr-fC">
                                    <label>User Type <sup>*</sup></label>
                                    <select id="@Html.IdFor(x=>x.Doctype)" name="@Html.NameFor(x=>x.Doctype)" class="applyselect form-control">
                                        <option value="SSR">SSR</option>
                                        <option value="TL">TL</option>
                                    </select>
                                </div>

                                <div class="col-sm-2 form-group d-flex align-items-end">
                                    <label class="small">&nbsp;</label>
                                    <button type="submit" id="btnSearch" name="Command" value="Add" class="button ">
                                        <span><img src="~/assets/design/images/png/magnifying-glass.png" /></span>
                                    </button>
                                </div>
                            </div>
                            <div class="tabmargin">
                                @Html.HiddenFor(x => x.Approved)
                                <ul id="tabs" class="nav nav-tabs " role="tablist">
                                    <li class="nav-item"> <a tabvalue="0" class="nav-link ripplelink AnchorApproval @(Model.Approved == 0 ? "active" : "")" data-toggle="tab" role="tab"> Pending</a> </li>
                                    <li class="nav-item"> <a tabvalue="1" class="nav-link ripplelink AnchorApproval @(Model.Approved == 1 ? "active" : "") " data-toggle="tab" role="tab">Approved</a></li>
                                    <li class="nav-item"> <a tabvalue="2" class="nav-link ripplelink AnchorApproval @(Model.Approved == 2 ? "active" : "") " data-toggle="tab" role="tab">Rejected</a></li>
                                </ul>

                            </div>
                        }

                        <div class="row">
                            <div class="col-md-12">
                                <div id="TargetDiv"></div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="modal fade pop-dgn" id="ViewModal">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header blk-gdn-btn">
                    <h4 class="modal-title"><span class="mx-1"> <i class="fas fa-print"></i> </span>RFC Approval</h4>
                    <div class="close" data-dismiss="modal">&times;</div>
                </div>
                <div class="modal-body">

                    @using (Ajax.BeginForm("ApproveRFC", "Approvals",
                        new { src = ClsCommon.Encrypt(ViewBag.MenuID + "*" + "/Approvals/ApproveRFC") },
                         new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnRFCSuccess", OnBegin = "ShowLoadingDialog()" },
                            new { @id = "ApproveRFCForm" })
                    )
                    {
                        <div class="col-sm-12 form-group ">
                            <label>Reason</label>
                            <textarea name="ApproveRemarks" class="form-control" Placeholder="Reason"></textarea>
                            <input type="hidden" name="Command" value="" />
                            <input type="hidden" name="RFCIDs" value="" />
                        </div>
                        <div class="col-sm-12 text-center mt-3">
                            <button type="button" class="btn cnl-btn ripplelink " data-dismiss="modal"><i class="fa fa-times"></i>Close</button>
                            <button type="submit" class="btn apr-btn ">
                                <i class="fa fa-check" aria-hidden="true"></i>
                                Submit
                            </button>
                        </div>
                    }

                </div>
            </div>
        </div>

    </div>
</div>
@section scripts    {
    @System.Web.Optimization.Scripts.Render("~/bundle/dataTablesjs")

    @System.Web.Optimization.Scripts.Render("~/bundle/unobtrusivejs")

    <script>

        $(document).ready(function () {
            $("#btnSearch").click();
        });


        $('#EMPID').change(function () {
            $("#btnSearch").click();
        });
        $('#Doctype').change(function () {
            $("#btnSearch").click();
        });
        $('#Month').bind("change", function () {
            $("#btnSearch").click();
        });

        $('.AnchorApproval').on('click', function (e) {
            e.preventDefault();
            e.stopPropagation();
            var att = $(this).attr("tabvalue");
            $(".AnchorApproval.active").removeClass("active");
            $(this).addClass("active");
            $("#Approved").val(att);
            $("#btnSearch").click();
        });
        function OnSuccess(obj) {
            $("#TargetDiv").empty();
            $("#TargetDiv").html(obj);
            CloseLoadingDialog();
            DatatableScripts();
        }

        function OnRFCSuccess(obj) {
            CloseLoadingDialog();
            if (obj.Status) {
                SuccessToaster(obj.SuccessMessage);
                $("#btnSearch").click();
                $("#ViewModal").modal('hide');
                $("input:hidden[name=RFCIDs]").val('');
                $("input:hidden[name=ApproveRemarks]").val('');
            }
            else {

                FailToaster(obj.SuccessMessage);

            }
        }

        //function ClickCheck(obj) {
        //    var IDs = "";
        //    $("input[name=Chksingle]").each(function () {
        //        if ($(this).prop('checked') == true) {
        //            IDs += $(this).val() + ",";
        //        }
        //    });
        //    $("input:hidden[name=RFCIDs]").val(IDs);
        //}

        function chkAll() {
            var checkAll = $("#checkAll").is(":checked");
            if (checkAll) {
                $(".Chksingle").each(function () {
                    $(this).prop('checked', true)
                });
            }
            else {
                $(".Chksingle").each(function () {
                    $(this).prop('checked', false)
                });
            }
        }


        function ShowApprovalBox(obj) {
            var Approve = $(obj).val();
            var IDs = "";
            $("input[name=Chksingle]").each(function () {
                if ($(this).prop('checked') == true) {
                    IDs += $(this).val() + ",";
                }
            });
            $("input:hidden[name=RFCIDs]").val(IDs);

            /* var Ids = $("input:hidden[name=RFCIDs]").val();*/
            if (IDs == "") {
                FailToaster("please select atleast one checkbox");
            } else {
                $("input:hidden[name=Command]").val(Approve);
                $("#ViewModal").modal('show');
            }

        }
    </script>

}
