@using System.Data
@model  DataSet

<div class="table-responsive mb-2">
    <table class="table table-bordered table-hover table-wrapper-scroll-y my-custom-scrollbar text-nowrap key-buttons inoutrpt">
        <thead>
            <tr>
                <th>S.No</th>
                <th>Name</th>
                <th>Total Sale</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                int count = 0;
                foreach (DataRow item in Model.Tables[0].Rows)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@item["Name"].ToString()</td>
                        <td>@item["Count"].ToString()</td>

                    </tr>
                }
            }
        </tbody>
    </table>
</div>
