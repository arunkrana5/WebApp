@model  Attendance_Log.PunchStatus

@if (!string.IsNullOrEmpty(Model.Title))
{
    <div class="row">

        <div class="col-6  form-group">
            <label>Status</label>
            <p>@Model.Title</p>
        </div>
        <div class="col-6 form-group">
            <label>In</label>
            <p><i class="fas fa-fingerprint"></i>@Model.InTime</p>
        </div>

        <div class="col-6 form-group">
            <label>Out</label>
            <p>

                @if (Model.OutTime.TotalMinutes != 0)
                {
                    <i class="fas fa-shoe-prints"></i>
                    @Model.OutTime
                }

            </p>
        </div>


        <div class="col-6 form-group">
            <label>Hrs  </label>
            <p>
                @if (!string.IsNullOrEmpty(@Model.Working))
                {
                    <i class="far fa-clock"></i> 
                    @Model.Working
                }
            </p>
        </div>


    </div>
}
else
{
    <p>Sorry!! You have not marked Attendance on this day.</p>
}