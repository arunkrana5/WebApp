@model IList<Banner.List>

@if (Model != null && Model.Count() > 0)
{
    <div class="row clearfix">

        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <div class="body">
                    <div id="BannerCarousel" class="carousel vert slide" data-ride="carousel" data-pause="hover" data-interval="1700">
                        <div class="carousel-inner">
                            @{ int count = 0;}
                            @foreach (var item in Model)
                            {
                                count++;
                                <div class="carousel-item @(count==1?"active":"")">
                                    <img src="@item.ImagePath" class="imgloader" />
                                    <div class="carousel-caption d-none d-md-block">
                                        <h2 class="display-4">@item.Heading</h2>
                                        <p class="lead">@item.SubHeading</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
