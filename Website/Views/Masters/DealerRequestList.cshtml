
@model IList<Dealer.List>


@section style{
    @System.Web.Optimization.Styles.Render("~/bundle/dataTablecss")

   
}

<div class="table-section">
    @Html.Partial("ListHeader_Partial", "Dealer Request List")

    <div class="row">
        <div class="col-lg-12 ">
            <div class="card">
                <div class="card-body">
                    <input type="hidden" id="hdnAddUrl" name="hdnAddUrl" value="@Url.Action("DealerRequestAdd",new { src = ClsCommon.Encrypt(ViewBag.MenuID+"*/Masters/DealerRequestAdd*0") })" />
                    <div class="table-responsive">
                        <table id="tblDataTable" class="table table-bordered table-hover text-nowrap key-buttons">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Action</th>
                                    <th>Doc No</th>
                                    <th>Doc Date</th>
                                    <th>Dealer Code</th>
                                    <th>Dealer Type</th>
                                    <th>Dealer Category</th>
                                    <th>Branch</th>
                                    <th>State</th>
                                    <th>City</th>
                                    <th>Area</th>
                                    <th>Region</th>
                                    <th>Address</th>
                                    <th>Latitude</th>
                                    <th>Longitude</th>
                                    <th>Billing Name</th>
                                    <th>Billing Code</th>
                                    <th>Route Number</th>
                                    <th>Visit Type</th>
                                    <th>Inserted Date</th>
                                    <th>Inserted by</th>
                                    <th>IP Address</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>



@section scripts    {
    @System.Web.Optimization.Scripts.Render("~/bundle/dataTablesjs")

<script>
    $(document).ready(function () {
        BindDataTable();
    });

    function BindDataTable() {
        var count = 0;
        var src = EncryptJSON(@ViewBag.MenuID+"*/Masters/_DealerRequestList*0")
        $('#tblDataTable').DataTable({
            "processing": true,
            "serverSide": true,
            "destroy": true,
            "ajax": {
                url: "/Masters/_DealerRequestList?src=" + src,
                type: "post"
            },
            "columns": [
                { "data": "ID" },
                { "data": "DealerName" },

                 {
                    className: 'ID',
                     data: 'ID',
                    render: function (data, type,row) {

                        if (type === 'display') {
                           
                            let edit = EncryptJSON(@ViewBag.MenuID+"*/Masters/DealerRequestAdd*" + row.ID);
                            let HTML = `<input type='hidden' name='I' value="${row.ID}" /><input type='hidden' name='N' value="${row.DocNo}" />`
                            if (row.DealerCode == '') {
                                HTML += `<a title="Edit" href="/Masters/DealerRequestAdd?src=${edit}" data-toggle="tooltip"><i class="fa-solid fa-pen-to-square" aria-hidden="true"></i> </a>`;
                            }
                            return HTML
                        }
                        return data;
                    }
                },

                { "data": "DocNo" },
                { "data": "DocDate" },
                { "data": "DealerCode" },
                { "data": "DealerType" },
                { "data": "DealerCategory" },
                { "data": "BranchName" },
                { "data": "StateName" },
                { "data": "CityName" },
                { "data": "AreaName" },
                { "data": "RegionName" },
                { "data": "Address" },
                { "data": "Latitude" },
                { "data": "Longitude" },
                { "data": "BillingName" },
                { "data": "BillingCode" },
                { "data": "RouteNumber" },
                { "data": "VisitType" },
                { "data": "CreatedDate" },
                { "data": "CreatedBy" },
                { "data": "IPAddress" }
            ]
        });

    }




</script>

}
