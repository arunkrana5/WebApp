@model Masters.Add


@using (Ajax.BeginForm("SaveMasterAll", "Masters",
        new { src = ClsCommon.Encrypt(ViewBag.MenuID + "*" + "/Masters/SaveMasterAll" + "*" + ViewBag.MasterID) },
         new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnSuccess", OnBegin = "ShowLoadingDialog()" },
            new { @id = "_CountryAddForm" })
    )
{

    @Html.HiddenFor(x => Model.TableName)
    @Html.HiddenFor(x => Model.MasterID)
    <div class="row">
        <div class="col-lg-3 col-md-6 col-sm-6 form-group">
            <label>Region<sup>*</sup></label>
            @Html.DropDownListFor(n => n.GroupID, new SelectList(ViewBag.ddList, "ID", "Name", Model.GroupID), "Select Region",
                new { @class = "form-control applyselect" })
            @Html.ValidationMessageFor(model => model.GroupID, "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-3 col-md-6 col-sm-6 form-group">
            <label>Priority</label>
            @Html.TextBoxFor(model => model.Priority, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Priority, "", new { @class = "text-danger" })
        </div>

        <div class="col-lg-3 col-md-6 col-sm-6 form-group">
            <label>State Name<sup>*</sup></label>
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>

        <div class="col-lg-3 col-md-6 col-sm-6 form-group">
            <label>State Code <sup>*</sup></label>
            @Html.TextBoxFor(model => model.Value, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Value, "", new { @class = "text-danger" })
        </div>

        <div class="col-lg-12 form-group text-right">

            @if (Model.MasterID > 0)
            {
                <button type="submit" class="btn client-save" name="Command" value="Add"> Update</button>
            }
            else
            {
                <button type="submit" class="btn client-save btn-primary" name="Command" value="Add">Submit</button>
            }
        </div>

    </div>
}