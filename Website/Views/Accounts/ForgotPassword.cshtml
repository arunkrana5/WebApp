
@model ForgotPassword

@{
    Layout = null;
    string PageName = ClsApplicationSetting.GetPageName();
}

<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@PageName </title>
    <meta name="title" content="@PageName" />
    <meta name="keywords" content="@PageName" />
    <meta name="description" content="@PageName" />

    <link rel="icon" href="@Url.Content("~/assets/design/images/brand/favicon.png")" type="image/png" sizes="50x50">
    @Html.IncludeVersionedCss(Url.Content("~/assets/design/css/style.css"))
    @Html.IncludeVersionedCss(Url.Content("~/assets/design/css/dark.css"))
    @Html.IncludeVersionedCss(Url.Content("~/assets/design/css/skins.css"))
    @Html.IncludeVersionedCss(Url.Content("~/assets/design/css/animated.css"))
    @Html.IncludeVersionedCss(Url.Content("~/assets/design/plugins/web-fonts/icons.css"))
    @Html.IncludeVersionedCss(Url.Content("~/assets/design/plugins/web-fonts/font-awesome/font-awesome.min.css"))
    @Html.IncludeVersionedCss(Url.Content("~/assets/design/plugins/web-fonts/plugin.css"))
</head>

<body class="" style="overflow-x:hidden">
    <div class="form bg-white " id="forgot-page">

        <div class="form-container row">

            <div class="form-image order-sm-12 order-md-12 col-xl-6 col-md-5 col-sm-12">
                @*<div class="l-image">
            </div>*@
            </div>
            <div class="form-form order-sm-1 order-md-1 col-xl-6 col-md-7 col-sm-12">
                <div class="form-form-wrap ">
                    <div class="form-container">
                        <div class="form-content">
                            @using (Html.BeginForm("ForgotPassword", "Accounts", FormMethod.Post,
                                                                                      new
                                                                                      {
                                                                                          name = "ForgotPasswordForm",
                                                                                          id = "ForgotPasswordForm",
                                                                                          @class = "login-form",
                                                                                          enctype = "multipart/form-data"
                                                                                      }))
                            {
                                @*<div class="key-icon d-flex justify-content-center align-items-center">
                                <span>

                                    <img src="~/assets/design/images/login-images/icons8-ignition-switch-warning-100.png" />
                                </span>
                            </div>*@
                                <h1 class="">Forgot Password?</h1>

                                @*<h1 class="">Password Recovery</h1>*@
                                <p class="signup-link ">Don't worry, we can help you. Enter your email and instructions will sent to you!</p>
                                <div class="text-left">
                                    <div class="form">

                                        <div id="email-field" class="field-wrapper input">
                                            @Html.TextBoxFor(model => model.UserID, new { @class = "form-control email", @autofocus = "true", @placeholder = HttpUtility.HtmlDecode("&#xf0e0; Enter User ID"), style = "font-family:Arial, FontAwesome; " })
                                            @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })


                                        </div>
                                        <div class="d-sm-flex justify-content-xl-between justify-content-sm-center">
                                            <div class="field-wrapper">
                                                <button type="submit" class="btn forgot-reset" value="">Reset</button>
                                            </div>
                                            <div>
                                                @if (TempData["LoginSuccess"] != null)
                                                {
                                                    if (TempData["LoginSuccess"].ToString() != "")
                                                    {
                                                        <div class="@(TempData["LoginSuccess"].ToString() == "Y" ? "text-success" : "text-danger") text-center">
                                                            @TempData["LoginSuccessMsg"]
                                                        </div>
                                                    }
                                                }
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <p class="terms-conditions">© 2020 All Rights Reserved. <a href="index.html">Thrivera</a> </p>
                            }
                        </div>
                    </div>
                </div>
            </div>

        </div>
       
    </div>
