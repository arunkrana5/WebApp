
@model SetPassword

@{
    Layout = null;
    string PageName = ClsApplicationSetting.GetPageName();
}

<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@PageName </title>
    <meta name="title" content="@PageName" />
    <meta name="keywords" content="@PageName" />
    <meta name="description" content="@PageName" />

    <link rel="icon" href="@Url.Content("~/assets/design/images/brand/favicon.png")" type="image/png" sizes="50x50">
    @Html.IncludeVersionedCss(Url.Content("~/assets/design/css/style.css"))
    @Html.IncludeVersionedCss(Url.Content("~/assets/design/css/dark.css"))
    @Html.IncludeVersionedCss(Url.Content("~/assets/design/css/skins.css"))
    @Html.IncludeVersionedCss(Url.Content("~/assets/design/css/animated.css"))
    @Html.IncludeVersionedCss(Url.Content("~/assets/design/plugins/web-fonts/icons.css"))
    @Html.IncludeVersionedCss(Url.Content("~/assets/design/plugins/web-fonts/font-awesome/font-awesome.min.css"))
    @Html.IncludeVersionedCss(Url.Content("~/assets/design/plugins/web-fonts/plugin.css"))
</head>

<body class="h-100vh  light-mode">
    <div class="page page-style1">
        <div class="page-single">
            <div class="container">
                <div class="row">
                    <div class="col mx-auto">
                        <div class="row justify-content-center">
                            <div class="col-md-5">
                                <div class="card card-group mb-0">
                                    <div class="card p-4">
                                        <div class="card-body">
                                            @using (Html.BeginForm("SetPassword", "Accounts", FormMethod.Post,
                                            new
                                            {
                                                name = "SetPasswordForm",
                                                id = "SetPasswordForm",
                                                @class = "login-form",
                                                enctype = "multipart/form-data"
                                            }))
                                            {
                                                <div class="text-center title-style mb-6">
                                                    <h1 class="mb-2">Set Password</h1>
                                                    <hr>
                                                    <p class="text-muted">Set Password Page</p>
                                                </div>
                                                <div class="input-group mb-4">
                                                    <span class="input-group-addon"><svg class="svg-icon" xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24"><path d="M0 0h24v24H0V0z" fill="none" /><path d="M20 8l-8 5-8-5v10h16zm0-2H4l8 4.99z" opacity=".3" /><path d="M4 20h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2zM20 6l-8 4.99L4 6h16zM4 8l8 5 8-5v10H4V8z" /></svg></span>
                                                    @Html.TextBoxFor(model => model.NewPassword, new { @class = "form-control", @autofocus = "true", @placeholder = "Enter New Password", @type = "password" })
                                                    @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                                                </div>
                                                <div class="input-group mb-4">
                                                    <span class="input-group-addon"><svg class="svg-icon" xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24"><path d="M0 0h24v24H0V0z" fill="none" /><path d="M20 8l-8 5-8-5v10h16zm0-2H4l8 4.99z" opacity=".3" /><path d="M4 20h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2zM20 6l-8 4.99L4 6h16zM4 8l8 5 8-5v10H4V8z" /></svg></span>
                                                    @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "form-control", @autofocus = "true", @placeholder = "Enter Old Password",@type="password" })
                                                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                                                </div>
                                                <div class="row">
                                                    <div class="col-12">
                                                        <button type="submit" name="Command" value="Submit" class="btn  btn-lg btn-primary btn-block px-4"><i class="fe fe-arrow-right"></i> Submit</button>
                                                    </div>
                                                    <div class="col-12">
                                                        @if (TempData["LoginSuccess"] != null)
                                                        {
                                                            if (TempData["LoginSuccess"].ToString() != "")
                                                            {
                                                                <div class="@(TempData["LoginSuccess"].ToString()=="Y"?"text-success":"text-danger") text-center">
                                                                    @TempData["LoginSuccessMsg"]
                                                                </div>
                                                            }
                                                        }
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>

                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    @Html.IncludeVersionedJs(Url.Content("~/assets/design/js/vendors/jquery-3.5.1.min.js"))
    @Html.IncludeVersionedJs(Url.Content("/assets/design/plugins/bootstrap/popper.min.js"))

    @System.Web.Optimization.Scripts.Render("~/bundle/unobtrusivejs")



</body>


</html>